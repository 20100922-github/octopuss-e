<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @folder.name %>
</p>

<ul>
<% @descendants.each do |d| %>
  <% if d.level == @folder.level + 1 %>
    <li><%= link_to d.name, d %> (<%= link_to 'Edit', edit_folder_path(d) %>)</li>
  <% end %>
<% end %>
<% @bookmarks.each do |b| %>
  <li><%= link_to b.name, b.url %> (<%= link_to 'Edit', edit_bookmark_path(b) %>)</li>
<% end %>
</ul>

<%= link_to 'Add Folder here ...', new_folder_folder_path(:folder_id => @folder.id) %> |
<%= link_to 'Add Bookmark here ...', new_folder_bookmark_path(:folder_id => @folder.id) %> |
<%= link_to 'Edit', edit_folder_path(@folder) %> |
<%= link_to 'Back', folders_path %>
