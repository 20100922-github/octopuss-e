<h1>Listing Tags</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= image_tag("small/light/tag_blue.png") + tag.name %></td>
    <td><%= Bookmark.tagged_with(tag.name).count + Folder.tagged_with(tag.name).count %></td>
    <td><%= link_to 'Show', tag %></td>
  </tr>
<% end %>
</table>
